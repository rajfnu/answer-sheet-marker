# Answer Sheet Marker - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================
# API Configuration (Required)
# ============================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum tokens for API responses
MAX_TOKENS=8192

# Temperature (0.0 = deterministic, important for consistent marking)
TEMPERATURE=0.0

# ============================================================
# Processing Configuration
# ============================================================
# Number of answer sheets to process in parallel
BATCH_SIZE=5

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=3

# ============================================================
# Quality Thresholds
# ============================================================
# Minimum confidence score for automatic marking (0-1)
MIN_CONFIDENCE_SCORE=0.7

# Confidence threshold below which human review is required (0-1)
REQUIRE_HUMAN_REVIEW_BELOW=0.6

# ============================================================
# Storage Configuration
# ============================================================
# Path to vector database storage
VECTOR_DB_PATH=./data/vector_db

# Enable caching for improved performance
CACHE_ENABLED=true

# Cache time-to-live in seconds (1 hour)
CACHE_TTL=3600

# ============================================================
# Logging Configuration
# ============================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file (set to empty to disable file logging)
LOG_FILE=./logs/app.log

# Log file rotation size
LOG_ROTATION=10 MB

# Log file retention period
LOG_RETENTION=1 week

# ============================================================
# Document Processing
# ============================================================
# Enable OCR for scanned/handwritten documents
OCR_ENABLED=true

# OCR language (tesseract language code)
OCR_LANGUAGE=eng

# DPI for PDF to image conversion
PDF_DPI=300

# ============================================================
# Output Configuration
# ============================================================
# Default output format: pdf, html, json
OUTPUT_FORMAT=pdf

# Directory for generated reports
OUTPUT_DIRECTORY=./output

# Include detailed feedback in reports
INCLUDE_DETAILED_FEEDBACK=true

# ============================================================
# Advanced Settings
# ============================================================
# Enable Claude's extended thinking for complex evaluations
ENABLE_EXTENDED_THINKING=false

# Number of retry attempts for failed API calls
RETRY_ATTEMPTS=3

# Minimum wait time (seconds) between retries
RETRY_WAIT_MIN=4

# Maximum wait time (seconds) between retries
RETRY_WAIT_MAX=10

# Enable debug mode with verbose logging
DEBUG_MODE=false
