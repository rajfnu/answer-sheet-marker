# ============================================================
# Answer Sheet Marker - Together.ai Configuration
# ============================================================
# This configuration uses Together.ai API (affordable)
# Best for: Cost-effective access to open models
# Cost: ~$0.05-0.20 per student

# LLM Provider Settings
LLM_PROVIDER=together
LLM_MODEL=meta-llama/Llama-3-70b-chat-hf  # Or: mistralai/Mixtral-8x7B-Instruct-v0.1
LLM_API_KEY=your-together-api-key  # Get from https://api.together.xyz/
LLM_BASE_URL=https://api.together.xyz/v1

# LLM Parameters
MAX_TOKENS=8192
TEMPERATURE=0.0

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT_REQUESTS=3

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.7
REQUIRE_HUMAN_REVIEW_BELOW=0.6

# Storage
VECTOR_DB_PATH=./data/vector_db
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Document Processing
PDF_DPI=300
OCR_LANGUAGE=eng
OCR_CONFIG=--psm 6

# Output
OUTPUT_DIRECTORY=./output
