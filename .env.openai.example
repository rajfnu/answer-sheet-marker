# ============================================================
# Answer Sheet Marker - OpenAI Configuration
# ============================================================
# This configuration uses OpenAI API (paid service)
# Best for: GPT-4 access, wide model selection
# Cost: ~$0.20-0.80 per student

# LLM Provider Settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo  # Options: gpt-4-turbo, gpt-4, gpt-3.5-turbo
LLM_API_KEY=sk-your-openai-api-key  # Get from https://platform.openai.com/api-keys

# LLM Parameters
MAX_TOKENS=8192
TEMPERATURE=0.0

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT_REQUESTS=3

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.7
REQUIRE_HUMAN_REVIEW_BELOW=0.6

# Storage
VECTOR_DB_PATH=./data/vector_db
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Document Processing
PDF_DPI=300
OCR_LANGUAGE=eng
OCR_CONFIG=--psm 6

# Output
OUTPUT_DIRECTORY=./output
