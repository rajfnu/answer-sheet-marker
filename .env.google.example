# ============================================================
# Answer Sheet Marker - Google Gemini Configuration
# ============================================================
# Using Google Gemini 2.0 Flash for FREE marking
# Cost: FREE (with usage limits)
# API Key: Get from https://makersuite.google.com/app/apikey

# LLM Provider Settings
LLM_PROVIDER=google
LLM_MODEL=gemini-2.0-flash-exp
LLM_API_KEY=YOUR_GOOGLE_API_KEY

# LLM Parameters
MAX_TOKENS=8192
TEMPERATURE=0.0  # 0.0 = deterministic (recommended for consistent marking)

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT_REQUESTS=3

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.7
REQUIRE_HUMAN_REVIEW_BELOW=0.6

# Storage
VECTOR_DB_PATH=./data/vector_db
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Document Processing
PDF_DPI=300
OCR_LANGUAGE=eng
OCR_CONFIG=--psm 6

# Output
OUTPUT_DIRECTORY=./output
