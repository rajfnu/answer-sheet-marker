# ============================================================
# Answer Sheet Marker - Anthropic Claude Configuration
# ============================================================
# This configuration uses Anthropic Claude API (paid service)
# Best for: Highest quality, most reliable marking
# Cost: ~$0.10-0.50 per student

# LLM Provider Settings
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_API_KEY=sk-ant-your-api-key-here  # Get from https://console.anthropic.com/

# LLM Parameters
MAX_TOKENS=8192
TEMPERATURE=0.0  # 0.0 = deterministic (recommended for consistent marking)

# Processing Configuration
BATCH_SIZE=5
MAX_CONCURRENT_REQUESTS=3

# Quality Thresholds
MIN_CONFIDENCE_SCORE=0.7
REQUIRE_HUMAN_REVIEW_BELOW=0.6

# Storage
VECTOR_DB_PATH=./data/vector_db
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Document Processing
PDF_DPI=300
OCR_LANGUAGE=eng
OCR_CONFIG=--psm 6

# Output
OUTPUT_DIRECTORY=./output
